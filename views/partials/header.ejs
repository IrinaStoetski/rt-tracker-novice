<% const today = new Date(); const formattedDate =
today.toLocaleDateString('en-US', { weekday: 'long', day: 'numeric', month:
'long', year: 'numeric' }); const endOfYear = new Date(today.getFullYear(), 11,
31); const timeDiff = endOfYear - today; // Fix: Assign timeDiff correctly const
daysLeft = Math.ceil(timeDiff / (1000 * 60 * 60 * 24)); %>

<header class="flex items-center justify-between gap-3 pb-6">
  <div class="flex items-center gap-3">
    <a href="/">
      <img src="/images/logo.png" alt="Logo" />
    </a>
    <p>
      Today is <%= formattedDate %>.<br />
      You have <%= daysLeft %> days till next year. <br />
      Stay on track, stay unstoppable.
    </p>
  </div>
  <% if (logout === 'true') { %>
  <button
    class="bg-violet-900 text-white px-5 py-2 rounded-lg"
    id="logout"
    type="button"
  >
    Logout
  </button>

  <% } %>
</header>
