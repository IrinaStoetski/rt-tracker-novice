<%- include("partials/head.ejs") %> <%- include("partials/header.ejs", { logout:
false}) %>
<div class="flex flex-col justify-center items-center">
  <% if (error) { %>
  <div
    class="rounded-lg absolute right-4 top-4 bg-red-200 text-red-900 text-base p-4"
  >
    <%= error %>
  </div>
  <% } %>
  <h2 class="text-4xl text-green-700 font-bold mb-3">Register</h2>
  <form
    method="POST"
    class="bg-white p-6 rounded-lg shadow-md w-full md:w-1/2 lg:w-1/3 xl:w-1/4 flex flex-col items-center"
    id="registerForm"
  >
    <div class="flex flex-col mb-4 w-full">
      <label name="name" class="text-base mb-2">How should we call you?</label>
      <input
        name="name"
        placeholder="Iryna"
        class="border border-violet-900 rounded-md p-2"
      />
    </div>
    <div class="flex flex-col mb-4 w-full">
      <label name="email" class="text-base mb-2">Email:</label>
      <input name="email" class="border border-violet-900 rounded-md p-2" />
    </div>
    <div class="flex flex-col mb-4 w-full">
      <label name="password" class="text-base mb-2">Password:</label>
      <input
        type="password"
        name="password"
        class="border border-violet-900 rounded-md p-2"
      />
    </div>
    <div class="flex flex-col mb-4 w-full">
      <label name="password1" class="text-base mb-2"
        >Confirm your password:</label
      >
      <input
        type="password"
        name="password1"
        class="border border-violet-900 rounded-md p-2"
      />
    </div>
    <div class="flex gap-4 items-center justify-center">
      <button class="bg-violet-900 text-white py-2 px-6 rounded-md">
        Register
      </button>
      <a href="/sessions/logon" class="text-base underline"> Go to login </a>
    </div>
  </form>
</div>
<%- include("partials/footer.ejs") %>
